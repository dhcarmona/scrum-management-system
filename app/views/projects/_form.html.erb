<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :product_owner_id %>
    <%= f.input :scrum_master_id %>
    <%= f.input :sprint_duration_in_weeks %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
