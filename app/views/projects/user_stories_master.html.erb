<div class="container">
<h1 align="center"><span class="label label-primary">User Stories for Project: <%= @project.name %></span></h1>
<p>&nbsp;</p>
	
			<% cols = 1 %>
			<% i = 0 %>
			<% @project.user_stories.each do |story|%> 
				
			   	<% if cols == 1%>
			   		<div class="row">
			   	<% end %>
			   		<div align="center">
						<div class="col-sm-6 col-lg-3">	
				   			<div class="panel panel-primary">
				   				<div class="panel-heading"><h3 class="panel-title"><%= "User Story" %></h3></div>
				   				<strong>Description:  </strong><%= story.description %><br>
				   				<strong>Priority:  </strong><%= story.priority %><br>
				   				<strong>Points:  </strong><%= story.points %><br>
				   				<% if !story.user.nil? %>
				   					<strong>Responsible:  </strong><%= story.user.email %><br>
				   				<%else%>
				   					<strong>Responsible:  </strong><%= "Not yet assigned" %><br>
				   				<%end%>
				   				<% if !story.sprint.nil? %>
				   					<strong>Sprint #:  </strong><%= story.sprint.id %><br>
				   				<%else%>
				   					<strong>Sprint #:  </strong><%= "Not yet assigned" %><br>
				   				<%end%>
				   					<div class="panel-footer">
									   	<%= link_to 'Dev/Tester Assignment', responsible_assignment_path(story)%>
									   	<%='---'%>
									   	<%= link_to 'Sprint Assignment', sprint_assignment_path(story)%>
				   					</div>
				   				</div>
				   			</div>
				   		</div>
				   	</div>
				   	<% i += 1 %>
				    <% if (cols == 4) %>
				   		</div>	
				   		<% cols = 0 %>
				    <% end %>
				    <% cols += 1 %>
			<% end %>
			<% if (cols != 5 && cols != 1) %>
			   
			<% end %>
			
			<p>&nbsp;</p>		


</div>