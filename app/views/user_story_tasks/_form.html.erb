<%= simple_form_for(@user_story_task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :user_story_id %>
    <%= f.input :stimated_effort_in_hours %>
    <%= f.input :actual_effort_in_hours %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
