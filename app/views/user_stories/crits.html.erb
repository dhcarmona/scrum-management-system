<div class="container">
<h1 align="center"><span class="label label-primary">Criterions for User Story <%= @user_story.description %>: </span></h1>
<p>&nbsp;</p>
<p align="center"><%= link_to 'Add Criterion', new_success_criterion_path(:user_story_id => @user_story.id), :class => "btn btn-default btn-lg"%></p>
		    <p>&nbsp;</p>
			<% cols = 1 %>
			<% i = 0 %>		   		
			<% @user_story.success_criterions.each do |crit|%> 

			   	<% if cols == 1%>
			   		<div class="row">
			   	<% end %>
			   		<div align="center">
						<div class="col-sm-6 col-lg-3">	
				   			<div class="panel panel-primary">
				   				<div class="panel-heading"><h3 class="panel-title"><%= "Success Criterion" %></h3></div>
				   				<strong>Description:  </strong><%= crit.description %><br>
				   				<strong>Completed:  </strong>
				   				<% if crit.completed %>
				   					Yes
				   				<%else%>
				   					Not yet
				   				<%end%>
				   				<br>
				   					<div class="panel-footer">
									   		<%= link_to 'Delete', crit, method: :delete, data: { confirm: 'Are you sure?' } %>
									   		<%= "---" %>
									   		<% if crit.completed %>
									   			<%= link_to 'Mark as Not Completed', toggle_completed_path(crit), method: :post, data: { confirm: 'Are you sure?' } %>
									   		<% else %>
									   			<%= link_to 'Mark as Completed', toggle_completed_path(crit), method: :post, data: { confirm: 'Are you sure?' } %>
									   		<%end%>
				   					</div>
				   				</div>
				   			</div>
				   	</div>
				   	<% i += 1 %>
				    <% if (cols == 4) %>
				   		</div>	
				   		<% cols = 0 %>
				    <% end %>
				    <% cols += 1 %>
			<% end %>
			<% if (cols != 5 && cols != 1) %>
			   </div>
			<% end %>
			
			<p>&nbsp;</p>		


</div>