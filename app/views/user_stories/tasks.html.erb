<div class="container">
<h1 align="center"><span class="label label-primary">Tasks for User Story <%= @user_story.description %>: </span></h1>
<p>&nbsp;</p>
<p align="center"><%= link_to 'Add Task',new_user_story_task_path(:user_story_id => @user_story.id), :class => "btn btn-default btn-lg"%></p>
		    <p>&nbsp;</p>
			<% cols = 1 %>
			<% i = 0 %>		   		
			<% @user_story.user_story_tasks.each do |task|%> 
				
			   	<% if cols == 1%>
			   		<div class="row">
			   	<% end %>
			   		<div align="center">
						<div class="col-sm-6 col-lg-3">	
				   			<div class="panel panel-primary">
				   				<div class="panel-heading"><h3 class="panel-title"><%= "Task" %></h3></div>
				   				<strong>Description #:  </strong><%= task.description %><br>
				   				<strong>Stimated Effort:  </strong><%= task.stimated_effort_in_hours %> Hours<br>
				   				<strong>Actual Effort Until Now:  </strong><%= task.GetTotalWorkedHours %> Hours<br>
				   					<div class="panel-footer">
									   		<%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %>
									   		<%= "---" %>
									   		<%= link_to 'Add Time', add_more_time_path(task) %>
				   					</div>
				   				</div>
				   			</div>
				   	</div>
				   	<% i += 1 %>
				    <% if (cols == 4) %>
				   		</div>	
				   		<% cols = 0 %>
				    <% end %>
				    <% cols += 1 %>
			<% end %>
			<% if (cols != 5 && cols != 1) %>
			   </div>
			<% end %>
			
			<p>&nbsp;</p>		


</div>