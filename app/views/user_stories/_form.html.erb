<div class="container">

        
        <p>&nbsp;</p>

    <div class="panel panel-primary" width="500px">
      <div class="panel-heading"><h3 class="panel-title">User Story Details</h3></div>
        <div align="center">
   
              <%= simple_form_for(@user_story) do |f| %>

                <%= f.error_notification %>
                <div class="form-inputs">
                  <%= f.input :description, :input_html => {:style=> 'width: 300px', :align=>"center"} %>
                  <%= f.input :priority, :input_html => {:style=> 'width: 100px', :align=>"center"} %>
                  <%= f.input :points, :input_html => {:style=> 'width: 100px', :align=>"center"} %>
                  <%= f.hidden_field :project_id, :value => @user_story.project.id %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, :class => "btn btn-primary"%>
                  <p>&nbsp;</p>
                </div>
              <% end %>
        </div>
    </div>
</div>        