<%= navbar :fixed => :top, container: 'fluid' do %>
<%= navbar_header brand: 'ScrumManagement', brand_link: '/' %>
  <%= navbar_collapse do%>
            <%= navbar_group id: 'menu' do %>
            <% if current_user %>
                <%= navbar_dropdown 'My Projects' do %>
                    <%= navbar_item 'Manage', user_path(current_user.id) %>
                    <% if current_user.isadmin %>
                        <%= navbar_item 'Create new', '/projects/new' %>
                    <%end %>
                <% end %>
            <% end %> 
        <% end %>
        <%= navbar_group class: 'foo', id: 'about', align: 'right' do %>

                <% if current_user && current_user.isadmin %>
                    <%= navbar_dropdown 'Administrator' do %>
                        <%= navbar_item 'Setup Administrator Rights', users_set_sysadmins_path %>
                    <% end %>
                <% end %> 

                <%= navbar_item 'Help', '/misc/help' %>
                <% if current_user %>
                        <li >
                          <a href="/users/sign_out" data-method="delete">
                            Log Out
                            </a></li>
                <% else %>
                    <%= navbar_item 'Log In', new_user_session_path %>
                <% end %> 
        <% end %>        
  <%end%> 
<% end %>