<%= simple_form_for(@stakeholder) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :phone_number %>
    <%= f.input :expectations %>
    <%= f.input :interest %>
    <%= f.input :power %>
    <%= f.input :project_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
